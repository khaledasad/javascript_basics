function changeBG(choice)
{
document.getElementById("mybody").style.backgroundColor=choice;
}
function change(choice)
{
document.getElementById("mybody").style.backgroundColor=choice;
}

function change(color)
{
document.getElementById("messageCG", "mybody").style.color=color;
}
function change(color)
{
document.getElementById("messageCG", "mybody").style.color=color;
}



function changePicture(choice)
{
if(document.getElementById("mypic").src==choice)
document.getElementById("mypic").src=choice;
else
document.getElementById("mypic").src=choice;
}


function message(choice)
{
	
	
	if(document.getElementById("messageCG").innerHTML==choice)
document.getElementById("messageCG").innerHTML=choice;
else
document.getElementById("messageCG").innerHTML=choice;
	
}

function custome(m)
{
var m =prompt("Write your message")
if(document.getElementById("messageCG").innerHTML==m)
document.getElementById("messageCG").innerHTML=m;
else
document.getElementById("messageCG").innerHTML=m;
}


</script>

